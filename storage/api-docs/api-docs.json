{
    "openapi": "3.0.0",
    "info": {
        "title": "COMFACA Crédito API",
        "description": "API para la gestión de solicitudes de crédito de COMFACA",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login de usuario",
                "description": "Login user and return token.",
                "operationId": "99d66635c4992aeaa6aa44ff653d0563",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "usuario123"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso"
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registro de usuario",
                "description": "Register a new user.",
                "operationId": "08136088c4862c313b35d6518bab8d3a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "tipo_documento",
                                    "numero_documento",
                                    "nombres",
                                    "apellidos",
                                    "telefono",
                                    "email",
                                    "username",
                                    "password",
                                    "confirmar_password"
                                ],
                                "properties": {
                                    "tipo_documento": {
                                        "type": "string",
                                        "example": "CC"
                                    },
                                    "numero_documento": {
                                        "type": "string",
                                        "example": "123456789"
                                    },
                                    "nombres": {
                                        "type": "string",
                                        "example": "Juan"
                                    },
                                    "apellidos": {
                                        "type": "string",
                                        "example": "Pérez"
                                    },
                                    "telefono": {
                                        "type": "string",
                                        "example": "3001234567"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan.perez@correo.com"
                                    },
                                    "username": {
                                        "type": "string",
                                        "example": "juanperez"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    },
                                    "confirmar_password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Registro exitoso"
                    },
                    "400": {
                        "description": "Error de validación/negocio"
                    }
                }
            }
        },
        "/auth/verify": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verificar token JWT y obtener info de usuario",
                "description": "Verify JWT token and return user info.\nComportamiento idéntico al endpoint de Python.",
                "operationId": "3fe89aafac35b1ddcdaf4b42c28b02f8",
                "responses": {
                    "200": {
                        "description": "Token válido"
                    },
                    "401": {
                        "description": "Token inválido"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/convenios/validar/{nit_empresa}/{cedula_trabajador}": {
            "get": {
                "tags": [
                    "Convenios"
                ],
                "summary": "Validar convenio por NIT y cédula",
                "description": "Valida si un trabajador es elegible para solicitar crédito bajo convenio empresarial.\n\nValida:\n- Existencia de convenio activo y vigente para la empresa\n- Estado del trabajador (debe estar Activo = 'A')\n- Tiempo de servicio (mínimo 6 meses)",
                "operationId": "f82d93478f3f2d92d4ef05faf6920218",
                "parameters": [
                    {
                        "name": "nit_empresa",
                        "in": "path",
                        "description": "NIT de la empresa",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "cedula_trabajador",
                        "in": "path",
                        "description": "Cédula del trabajador",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Validación exitosa"
                    },
                    "400": {
                        "description": "Error de validación de negocio"
                    },
                    "404": {
                        "description": "Convenio/Trabajador no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/convenios/validar": {
            "post": {
                "tags": [
                    "Convenios"
                ],
                "summary": "Validar convenio (POST)",
                "description": "Valida convenio mediante POST (alternativa para formularios).\n\nBody:\n{\n    \"nit_empresa\": \"string\",\n    \"cedula_trabajador\": \"string\"\n}",
                "operationId": "196517480432b15e6649ebbb3111ff5d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nit_empresa",
                                    "cedula_trabajador"
                                ],
                                "properties": {
                                    "nit_empresa": {
                                        "type": "string",
                                        "example": "900123456"
                                    },
                                    "cedula_trabajador": {
                                        "type": "string",
                                        "example": "123456789"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Validación exitosa"
                    },
                    "422": {
                        "description": "Error de validación (campos requeridos)"
                    },
                    "400": {
                        "description": "Error de negocio"
                    },
                    "404": {
                        "description": "Convenio/Trabajador no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/postulaciones": {
            "post": {
                "tags": [
                    "Postulaciones"
                ],
                "summary": "Crear nueva postulación",
                "description": "Crear una nueva postulación",
                "operationId": "36c6c9f6c074ce322b5de63cb4d07dda",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "monto_solicitado",
                                    "plazo_meses"
                                ],
                                "properties": {
                                    "monto_solicitado": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 10000000
                                    },
                                    "plazo_meses": {
                                        "type": "integer",
                                        "example": 12
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Postulación creada exitosamente"
                    },
                    "422": {
                        "description": "Error de validación"
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Convenios",
            "description": "Convenios"
        },
        {
            "name": "Postulaciones",
            "description": "Postulaciones"
        }
    ]
}